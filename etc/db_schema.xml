<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="sales" engine="innodb">
        <column xsi:type="varchar" name="printcart_project_id" nullable="true" length="255" comment="Printcart Project ID"/>
    </table>
    <table name="sales_order_grid" resource="sales" engine="innodb">
        <column xsi:type="varchar" name="printcart_project_id" nullable="true" length="255" comment="Printcart Project ID"/>
    </table>
    <table name="sales_order_item" resource="sales" engine="innodb">
        <column xsi:type="text" name="designs" nullable="true" comment="Printcart Designs"/>
    </table>
    <table name="quote_item" resource="sales" engine="innodb">
        <column xsi:type="text" name="designs" nullable="true" comment="Printcart Designs"/>
    </table>
</schema>
